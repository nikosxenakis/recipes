{
  "name": "recipe-app",
  "version": "0.3.0",
  "description": "A simple recipe app that allows users to view, add, and manage recipes.",
  "private": true,
  "type": "module",
  "repository": "https://github.com/nikosxenakis/recipes",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "markdown-it": "^14.1.0",
    "marked": "^15.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "vite": "^7.0.6"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-plugin-string": "^1.2.3"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "tsc -b && vite build --mode production"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
